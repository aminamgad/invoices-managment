<% const title = 'تعديل الموزع'; %>
<%- include('../layout', { title, body: `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">تعديل الموزع</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/distributors" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-right"></i>
            العودة للموزعين
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">بيانات الموزع</h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/distributors/${distributor._id}?_method=PUT">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="username" class="form-label">اسم المستخدم <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="username" name="username" value="${distributor.username}" required>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="commissionRate" class="form-label">نسبة العمولة (%) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="commissionRate" name="commissionRate" min="0" max="100" step="0.01" value="${distributor.commissionRate}" required>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">الصلاحيات</label>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="canCreateCompanies" name="permissions[canCreateCompanies]" ${distributor.permissions.canCreateCompanies ? 'checked' : ''}>
                                    <label class="form-check-label" for="canCreateCompanies">
                                        إنشاء الشركات
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="canCreateInvoices" name="permissions[canCreateInvoices]" ${distributor.permissions.canCreateInvoices ? 'checked' : ''}>
                                    <label class="form-check-label" for="canCreateInvoices">
                                        إنشاء الفواتير
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="canManageClients" name="permissions[canManageClients]" ${distributor.permissions.canManageClients ? 'checked' : ''}>
                                    <label class="form-check-label" for="canManageClients">
                                        إدارة العملاء
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="canViewReports" name="permissions[canViewReports]" ${distributor.permissions.canViewReports ? 'checked' : ''}>
                                    <label class="form-check-label" for="canViewReports">
                                        عرض التقارير
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isActive" name="isActive" ${distributor.isActive ? 'checked' : ''}>
                            <label class="form-check-label" for="isActive">
                                الحساب نشط
                            </label>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i>
                            حفظ التعديلات
                        </button>
                        <a href="/distributors" class="btn btn-outline-secondary">إلغاء</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">معلومات الموزع</h5>
            </div>
            <div class="card-body">
                <p><strong>تاريخ الإنشاء:</strong><br>${new Date(distributor.createdAt).toLocaleDateString('ar-EG')}</p>
                <p><strong>آخر تحديث:</strong><br>${new Date(distributor.updatedAt).toLocaleDateString('ar-EG')}</p>
            </div>
        </div>
    </div>
</div>
` }) %>